    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="ButtonPanel" 
                    Orientation="Horizontal"
                    VerticalAlignment="Top" 
                    Grid.Row="0">
            <local:RoundButton x:Name="CharactersButton" 
                    Command="{Binding CharactersButtonCommand}"
                    AccentColor="LightBlue"
                    Opacity="0.55"
                    Margin="5,0">
                <Image Margin = "12" 
                       Source="{StaticResource CharactersButtonImg}"/>
            </local:RoundButton>
            <local:RoundButton x:Name="CloseButton" 
                    Command="{Binding CloseButtonCommand}"
                    AccentColor="Red"
                    Opacity="0.55"
                    Margin="5,0">
                <Image Margin="13" 
                       Source="{StaticResource CloseButtonImg}"/>
            </local:RoundButton>
        </StackPanel>
        <Grid Height="200" Width="200" 
              VerticalAlignment="Top" 
              Grid.Row="1"
              PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">
            <Image x:Name="petImagePlayer"
                   gif:AnimationBehavior.RepeatBehavior="Forever"
                   gif:AnimationBehavior.SourceUri="{Binding ImageNow}"
                   Stretch="Fill"/>
        </Grid>
    </Grid>
</Window>
